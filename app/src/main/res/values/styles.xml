<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavTextStyle">
        <!-- Specify the desired font family, size, style, etc. -->
        <item name="android:fontFamily">@font/jameel_noori_nastaleeq</item> <!-- Specify your custom font -->
        <item name="android:textSize">12sp</item> <!-- Specify the text size -->
        <!-- Add other attributes as needed -->
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomSearchView" parent="ThemeOverlay.AppCompat.Light">
        <item name="queryBackground">@drawable/search_view_bg</item> <!-- Background with rounded corners -->
        <item name="searchIcon">@drawable/ic_search_custom</item> <!-- Custom search icon -->
        <item name="android:textColorHint">#B56576</item> <!-- Hint color (similar to the image) -->
        <item name="android:textColor">#8B4513</item>
    </style>
</resources>