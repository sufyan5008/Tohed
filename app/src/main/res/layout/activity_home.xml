            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="@dimen/_15sdp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_btn"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:background="@drawable/nav_full_rounded_btn">

                    <ImageView
                        android:id="@+id/homeImg"
                        android:background="@null"
                        android:src="@drawable/mashoor_m"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/homeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/taza_mazamen_tab_title_urdu"
                        android:textSize="12sp"
                        android:fontFamily="@font/mehr_urdu_font"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search_btn"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:background="@drawable/nav_full_rounded_btn"
                    android:backgroundTint="@color/transparent">

                    <ImageView
                        android:id="@+id/greetingImg"
                        android:background="@null"
                        android:src="@drawable/mashoor_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp" />

                    <TextView
                        android:id="@+id/greetingTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mashoor_mazameen_tab_title_urdu"
                        android:textSize="12sp"
                        android:fontFamily="@font/mehr_urdu_font"
                        android:textColor="@color/black"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mutafariq_M"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:background="@drawable/nav_full_rounded_btn"
                    android:backgroundTint="@color/transparent">
                    <ImageView
                        android:id="@+id/mutImg"
                        android:background="@null"
                        android:src="@drawable/ihm_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp" />

                    <TextView
                        android:id="@+id/mutTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/ihm_mozuat_tab_title_urdu"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mehr_urdu_font"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/premium_btn"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:background="@drawable/nav_full_rounded_btn"
                    android:backgroundTint="@color/transparent">

                    <ImageView
